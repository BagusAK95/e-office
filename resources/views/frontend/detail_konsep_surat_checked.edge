                            }
                            else if(element.status_surat==4)
                            {
                                sts = "<span style='color:white;' class='badge badge-pill badge-lg badge-success'>Terkirim</span>";
                            }

                            var tanggal_surat = tanggal_indo(element.tgl_surat);

                            if(element.nomor_surat==null)
