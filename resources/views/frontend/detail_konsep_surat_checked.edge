  function preview(file) {
    var all = file.split(".");
    var ekstensi = all[1];
    if (ekstensi == 'pdf') {
      $('#file_preview').html('<embed src="' + file +
        '" type="application/pdf"  style="margin-left:-345px" width="217%" height="567px"/>');
    } else {
      $('#file_preview').html('<img src="' + file + '" width="100%">');
    }
    $('#lampiransurat').modal("show");
  }


  function tanggal_indo(tanggal) {
    moment.locale('id');
    return moment(tanggal).format("LL");
  }

  function tanggal_jam_indo(tanggal) {
    moment.locale('id');
    return moment(tanggal).format("LLL");
  }

  $("#simpan").submit(function () {
    $("#tombol_submit").addClass("disabled");
    $.ajax({
      type: 'PUT',
      url: '/api/konsep-surat/checkingConcept/{{params.id}}',
      headers: {
        'Authorization': 'Bearer {{sesi}}'
      },
      data: "id_surat_keluar={{params.id}}" + "&status=" + $("#status").val() + "&keterangan=" + $(
        "#input_keterangan").val(),
      success: function (data) {
        if (data.success == false) {
          swal("Gagal!", "Perubahan Status Gagal.", "error");
        } else if (data.success == true) {
          swal({
              title: "Berhasil",
              text: data.message,
              type: "success"
            },
            function () {
              window.location.href = "/konsep-surat/checked";
            }
          );
        }
        $("#tombol_submit").removeClass("disabled");
      },
      error: function (data) {
        swal("Gagal!", "Perubahan Status Gagal.", "error");
      }
    });
    return false;
  });


