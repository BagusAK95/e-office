                            var pemeriksa_surat = "";
                            var no = 1;
                            $.each(element.pemeriksa_, function(index, element) {    
                                pemeriksa_surat+=no+". "+element.nama_pemeriksa+"<br>";
                                no++;
                            });
                            
                            var sm = "";
                            if(element.dari_surat_masuk)
                            {
                                 sm += "<b>"+element.surat_masuk_.nomor_surat+"</b><br>";
