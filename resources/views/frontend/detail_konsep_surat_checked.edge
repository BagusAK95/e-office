          $("#tambah_pengecek").hide();
        }

      }
    });
  }

  function ket(keterangan) {
    if (keterangan == 'null') {
      var ket = "Tidak ada keterangan";
    } else {
      var ket = decodeURIComponent(keterangan);
    }
    $('#keterangan').html("<center>" + ket + "</center>").show();
    $('#exampleNiftyFlipHorizontal4').modal("show");
  }

</script>
