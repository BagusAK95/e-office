       function showbrand(page,nama,tgawl,tgakh)
       {
           
           var parameter = '';
           if(nama=='')
           {
               var naman = "";
           }
           else
           {
               var naman = "keyword="+nama+"&";
           }

           if(tgawl=='')
           {
               var tgl_awal = "";
           }
           else
           {
               var tgl_awal = "tgl_awal="+tgawl+"&";
           }
   
           if(tgakh=='')
           {
               var tgl_akhir = "";
           }
           else
           {
               var tgl_akhir = "tgl_akhir="+tgakh+"&";
           }
           parameter += naman+tgl_awal+tgl_akhir;


           $.ajax({ 
               type: 'GET', 
               url: '/gettoken', 
               success: function (data) { 
                   $.ajax({ 
                       type: 'GET', 
                       url: '/api/disposisi/keluar?'+parameter+"page="+page+'&limit=10', 
                       headers: {
                           'Authorization': 'Bearer ' + data.token
                       },
                       dataType: 'json',
                       success: function (data) { 
                           var text="";
                           $.each(data.data.data, function(index, element) 
                           {
                              var keamanan = "";
                            if(element.keamanan==1)
                            {
                                keamanan = "<span style='color:white' class='badge badge-pill badge-lg badge-success'>Biasa</span>";
                            }
                            else if(element.keamanan==2)
                            {
                                keamanan = "<span style='color:white' class='badge badge-pill badge-lg badge-info'>Rahasia Terbatas</span>";
                            }
                            else if(element.keamanan==3)
                            {
                                keamanan = "<span style='color:white' class='badge badge-pill badge-lg badge-warning'>Rahasia</span>";
                            }
                            else if(element.keamanan==4)
                            {
                                keamanan = "<span style='color:white' class='badge badge-pill badge-lg badge-danger'>Sangat Rahasia</span>";
                            }

                            var kecepatan = "";
                            if(element.kecepatan==1)
                            {
                                kecepatan = "<span style='color:white' class='badge badge-pill badge-lg badge-success'>Biasa</span>";
                            }
                            else if(element.kecepatan==2)
                            {
                                kecepatan = "<span style='color:white' class='badge badge-pill badge-lg badge-warning'>Segera</span>";
                            }
                            else if(element.kecepatan==3)
                            {
                                kecepatan = "<span style='color:white' class='badge badge-pill badge-lg badge-danger'>Amat Segera</span>";
                            }

                               var tg_disposisi = tanggal_indo(element.tgl_disposisi);

                               var tr_data = "<tr><td>"+tg_disposisi+"</td><td>"+keamanan+"</td><td>"+kecepatan+"</td><td><b>"+element.nama_pengirim+"</b><br>"+element.jabatan_pengirim+"</td><td><b>"+element.nama_penerima+"</b><br>"+element.jabatan_penerima+"</td><td><div class='btn-toolbar' aria-label='Toolbar with button groups' role='toolbar'><div class='btn-group' role='group'><a href='/disposisi-keluar/"+element.id+"'class='btn btn-icon btn-primary'><i class='icon md-eye' aria-hidden='true' style='color:white'></i></a><button onclick=delete_data('"+element.id+"') type='button' class='btn btn-icon btn-primary delete'><i class='icon md-delete' aria-hidden='true'></i></button></div></div></td></tr>";
                               text += tr_data;
                           });
   
                           $("#body").html(text).show();
   
                           var disbalenext = '';
                           if(data.data.lastPage==data.data.page)
                           {
                               disbalenext='disabled';
                           }
   
                           if(nama)
                           {
                               var isi_nama = naman;
                           }
                           else
                           {
                               var isi_nama = "";
                           }
                           
   
                           var prev="";
                           if(page==1)
                           {
                               prev = "disabled";
                           }
   
                           $("#pagination").html("<center><BR><div class='btn-group' aria-label='Basic example' role='group'><button class='btn btn-sm btn-primary btn-pill-left' "+prev+" onclick=showbrand(1,'"+isi_nama+"','"+tgl_awal+"','"+tgl_akhir+"')><i class='icon fa-angle-double-left'></i></button><button "+prev+" class='btn btn-xs btn-primary' onclick=showbrand(" + (data.data.page - 1) + ",'"+isi_nama+"','"+tgl_awal+"','"+tgl_akhir+"')><i class='icon fa-angle-left'></i></button> <button class='btn btn-xs btn-primary' style='width:50px'> Page </button> <input type='text' style='width:50px;text-align: center;' class='pagin' id='pagin' onkeyup='dopagin()'  onkeypress='return isNumber(event)'  value='"+data.data.page+"'><button class='btn btn-xs btn-primary' style='width:50px'> of "+data.data.lastPage+" </button><button class='btn btn-xs btn-primary' "+disbalenext+" onclick=showbrand(" + (data.data.page + 1) + ",'"+isi_nama+"','"+tgl_awal+"','"+tgl_akhir+"')><i class='icon fa-angle-right'></i></button><button class='btn btn-xs btn-primary btn-pill-right' onclick=showbrand(" + data.data.lastPage + ",'"+isi_nama+"','"+tgl_awal+"','"+tgl_akhir+"') "+disbalenext+"><i class='icon fa-angle-double-right'></i></button></div><br>Showing "+data.data.page+" to "+data.data.perPage+" of "+data.data.total+" entries").show();
                            $("#loader").fadeOut("xslow");
                       }
                   });
   
   
               },
               error: function ()
               {
                   return false;
               }
           });
       }
   
       
   
       function isNumber(evt) {
           evt = (evt) ? evt : window.event;
           var charCode = (evt.which) ? evt.which : evt.keyCode;
           if (charCode > 31 && (charCode < 48 || charCode > 57)) {
               return false;
           }
           return true;
       }
   
   
   
       function delete_data(id)
       {
           if(confirm('Yakin menghapus data ini?'))
           {
               $.ajax({ 
                   type: 'GET', 
                   url: '/gettoken', 
                   success: function (data) {
                       $.ajax({ 
                           type: 'DELETE', 
                           url: '/api/disposisi/'+id, 
                           headers: {
                               'Authorization': 'Bearer ' + data.token
                           },
                           dataType: 'json',
                           success: function (data) 
                           { 
                               if(data.success==false)
                               {
                                   swal("Gagal!", "Hapus data gagal.", "error");
                               }
                               else if(data.success==true)
                               {
                                   swal({title: "Berhasil", text: "Berhasil hapus data.", type: "success"},
                                   function(){ 
                                       location.reload();
                                   }
                                   );
                               }
                           },
                           error: function ()
                           {
                               return false;
                           }
                       });
                   },
                   error: function ()
                   {
                       return false;
                   }
               });
           }
           else
           {
               return false;
           }
       }
       
       function tanggal_indo(tanggal)
       {           
            moment.locale('id'); 
            return moment(tanggal).format("LL");
       }
       function tanggal_jam_indo(tanggal)
       {           
            moment.locale('id'); 
            return moment(tanggal).format("LLL");
       }
