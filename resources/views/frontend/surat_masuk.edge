                {
                    
                    showbrand(1,search,tgawl,tgakh);
                }
                else
                {
                    showbrand(1,search,tgawl,'');
                }
            }
            else
            {
                showbrand(1,search,'','');
            }
        }
        else
        {
            if($("#tgawl").val())
            {
                if($("#tgakh").val())
                {
                    
                    showbrand(1,"",tgawl,tgakh);
                }
                else
                {
                    showbrand(1,"",tgawl,'');
                }
            }
            else
            {
                showbrand(1,"",'','');
            }
        }
        return false;
    });

   function cari()
