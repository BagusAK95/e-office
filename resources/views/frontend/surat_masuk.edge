    function getsession()
    {
        $.ajax({ 
        type: 'GET', 
        url: '/getlevel', 
        success: function (data) 
        { 
            if(data==3)
            {
                $(".add").css('display','block');
                $(".delete").css('display','block');   
            }
            else if(data==2)
            {
                $(".add").css("display", "none");
                $(".delete").css("display", "none");
            }
            else if(data==1)
            {
                $(".add").css("display", "none");
                $(".delete").css("display", "none");
            }
            else if(data==4)
            {
                $(".add").css("display", "none");
                $(".delete").css("display", "none");
            }
        },
        error : function(data)
        {

        }
    });
