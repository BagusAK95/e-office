    $( "#searchform" ).submit(function( event ) {
        var search = $("#search").val();
        var tgawl = $("#tgawl").val();
        var tgakh = $("#tgakh").val();
        $("#loader").fadeIn("slow");
        if($("#search").val())    
        {
            if($("#tgawl").val())
            {
