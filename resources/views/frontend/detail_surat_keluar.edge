                        $("#histor").hide();
                    }
                    else
                    {
                        $("#buat_dispo").show();
                        $("#histor").show();
                    }
                    
                    //$("#pemeriksa_master").val(JSON.stringify(element.pemeriksa_));
                    var isi = "[";
                    var jsondata = element.pemeriksa_;
                    var nomor = 1;
                    if(jsondata)
                    {
                        for (var i = 0; i < jsondata.length; i++) {
                            var nip = jsondata[i]['nip_pemeriksa'];
                            var nama = jsondata[i]['nama_pemeriksa'];
                            var jabatan = jsondata[i]['jabatan_pemeriksa'];
                            isi += '{"nip_pemeriksa":"'+nip+'","nama_pemeriksa":"'+nama+'","jabatan_pemeriksa":"'+jabatan+'"}';
                            if(nomor<jsondata.length)
                            {
                                isi += ",";
                            }
                            nomor++;
                        }

                    }
                    $("#pemeriksa_master").val(isi+"]");


                    if(element.status_surat==4)
                    {
                        $("#pengiriman_div").show();
