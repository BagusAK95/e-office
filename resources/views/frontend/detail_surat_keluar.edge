                },
                success: function (datanya) 
                { 
                    if(datanya!=3)
                    {
                        $("#stat_kirim").hide();
                    }
                    $("#loader").fadeOut();        
                },
                error: function(data)
                {
                    swal("Gagal!", data.message, "error");
                    $("#loader").fadeOut();        
                }
                });
            return false;
        }
   
