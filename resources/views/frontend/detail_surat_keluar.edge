        function ket(keterangan)
         {
            if(keterangan=='null')
            {
                var ket = "Tidak ada keterangan";
            }
            else
            {
                var ket = decodeURIComponent(keterangan);
            }
            $('#keterangan').html("<center>"+ket+"</center>").show();
            $('#exampleNiftyFlipHorizontal4').modal("show");
         }
         function updateresi(id,kurir,resi)
         {

            $("#id_pengiriman").val(id);
            $("#kurir").val(kurir);
            var res = "";
            if(resi!='null')
            {
                res=resi;
            }
            
            $("#nomor_resi").val(res);
            $('#exampleNiftyFlipHorizontal6').modal("show");
         }
         function kurir()
         {
            $.ajax({ 
                    type: 'GET', 
                    url: '/api/ekspedisi', 
                    headers: {
                    'Authorization': 'Bearer {{sesi}}'
                    },
                    success: function (data) 
                    { 
                        var isipengiriman = "";
                        $.each(data.data, function(index, element) {    
                            isipengiriman += "<option value='"+element.kode+"'>"+element.nama+"</span>";
                        });
                        //alert(isipengiriman);
                        $("#kurir").html(isipengiriman).show();
                    },
                    error: function(data)
                    {
                        
                    }
            });
         }
         function cekresi(id)
         {
            $("#loader").fadeIn();
             //alert(id);
            $.ajax({ 
                    type: 'GET', 
                    url: '/api/surat-pengiriman/track/'+id, 
                    headers: {
                    'Authorization': 'Bearer {{sesi}}'
                    },
                    data:"id="+id,
                    success: function (data) 
                    { 
                        var isipengiriman = "";
                        $.each(data.data, function(index, element) {    
                            isipengiriman += "<tr>\
                                <th>"+element.manifest_description+"</th>\
                                <th>"+tanggal_indo(element.manifest_date)+"</th>\
                                <th>"+element.manifest_time+"</th>\
                            </tr>";
                        });
                        $("#tabelresi").html(isipengiriman).show();
                        $('#exampleNiftyFlipHorizontal7').modal("show");   
                        $("#loader").fadeOut();         
                    },
                    error: function(data)
                    {
                        
                    }
            });
         }
         
