                    tabel3 += "<tr><th bgcolor='#f1f1f1' width='50%'>KAITAN SURAT MASUK</th><td width='50%'>"+sm+"</td>";
                    
                    $("#tabel").html(tabel).show();
                    $("#tabel2").html(tabel2).show();
                    $("#tabel3").html(tabel3).show();

